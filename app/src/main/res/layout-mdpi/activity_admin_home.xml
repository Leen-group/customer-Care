<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Admin.AdminHomeActivity.AdminHomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lineardash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.5"
                android:src="@drawable/shipping" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:src="@drawable/dashboard" />

            <ImageView
                android:id="@+id/AdminNotific"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/bell" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearemotions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/iv_happy"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/happy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/vs"
                android:textAlignment="center"
                android:textColor="#900000"
                android:textSize="70sp" />

            <ImageView
                android:id="@+id/iv_unhappy"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/unhappy" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/tvspinneryear"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_bg"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/markyourdate"
                android:textColor="@color/brightwhite"
                android:textSize="15sp" />

            <CalendarView
                android:id="@+id/admin_spinner_year"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="#fff"></CalendarView>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvspinnerbranch"
                android:layout_width="150dp"
                android:layout_height="0dp"

                android:layout_weight="1"
                android:background="@drawable/spinner_bg"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/To"
                android:textColor="@color/brightwhite"
                android:textSize="15sp" />
            <CalendarView
                android:background="#fff"
                android:id="@+id/admin_spinner"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></CalendarView>

            <Button
                android:id="@+id/btnok"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_bg"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/ok"
                android:textColor="@color/brightwhite"
                android:textSize="15sp" />

        </LinearLayout>


        <com.anychart.AnyChartView
            android:id="@+id/any_chart_view"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>

